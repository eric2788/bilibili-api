{
  "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "outDir": "dist",
      "paths": {
          "@*": ["./src/*"],
          "bilibili-api": ["./src/index"],
      }
  },
  "include": [
    "./**/*.d.ts",
    "./**/*.ts",
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}