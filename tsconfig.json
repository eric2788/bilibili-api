{
  "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "skipLibCheck": false,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "outDir": "dist",
      "paths": {
          "@*": ["./src/*"],
          "bilibili-api": [ "./dist" ]
      }
  },
  "include": [ "./src" ],
  "exclude": ["node_modules", "dist"]
}