{
  "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "outDir": "dist",
      "paths": {
          "@*": ["./src/*"]
      }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}